<?<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xml:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="Person" class="com.ciazhar.spring.Person">
    <property name="nama" value="Muhammad Hafidz"></property>
    <property name="alamat" ref="Address"></property>
  </bean>
  <bean id="Address" class="com.ciazhar.spring.Alamat">
    <property name="jalan" value="jalan-jalan"></property>
    <property name="kota" value="kota-kota"></property>
    <property name="kodepos" value="51380"></property>
  </bean>
</beans>
